<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_button_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/phone_id"
        android:layout_width="362dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="420dp" />

    <EditText
        android:id="@+id/password_id"
        android:layout_width="362dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="354dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motorway App"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/title_desc_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="163dp" />

    <EditText
        android:id="@+id/name_id"
        android:layout_width="364dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="222dp" />

    <EditText
        android:id="@+id/email_id"
        android:layout_width="362dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="292dp" />

    <Button
        android:id="@+id/register_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="506dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Already registered? Login Here"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/register_button_id"
        app:layout_constraintStart_toStartOf="@+id/register_button_id"
        app:layout_constraintTop_toBottomOf="@+id/register_button_id" />
</androidx.constraintlayout.widget.ConstraintLayout>